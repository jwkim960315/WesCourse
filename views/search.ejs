<!DOCTYPE html>
<html>
    <head>
        <meta charset="'utf-8">
        <meta name="'viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <title>WesCourse</title>

        <!-- Font Awesome -->
        <script src="https://use.fontawesome.com/b6a42b064c.js"></script>
        

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


        <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.min.css">
        <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
        <script src="/semantic/dist/semantic.min.js"></script>
    </head>

    <body>
        <div class="cont" style="position: relative;">

            <form method="POST" action="/search/query/1/1" class="ui form">
                <div class="fields">
                    <div class="ui category search" style="left: 50%;">
                        <div class="ui icon input">
                            <i class="search icon"></i>
                            <input class="prompt six wide field" type="text" name="searchParam" placeholder="Search any keywords..."> 
                        </div>
                        <button class="ui button red" type="submit">Search</button>
                        <div class="results"></div>
                    </div>
                </div>
            </form>

        </div>

        <% if (data === -1) { %>
            <h3>
                No Results found. Please go to the Catalog section.
            </h3>
        <% } else if (data !== undefined) { %>
            <table class="table">
                <tbody>
                    
                    <% for (var i=0; i < data.length; ++i) { %>
                        <tr>
                            <th>
                                <a href="/catalog/<%= data[i].field_acronym %>/<%= data[i].course_acronym %>" style="color:black;"><strong><u><%= data[i].course_acronym %></u></strong></a>
                                <h6 style="display:inline;"><strong><%= data[i].course_name %></strong></h6>
                                <h6 style="float: right;"><strong>Class Time: <%= data[i].class_date %></strong></h6>
                                <br>
                                <h6><strong>Section: <%= data[i].section %></strong></h3>
                                <h6><strong>Professors: <%= data[i].professors %></strong></h3>
                            </th>
                        </tr>
                    <% } %>
                    
                </tbody>
            </table>
            


            <nav aria-label="Page navigation example">
                
                <ul class="pagination justify-content-center">
                    <div id="pages-container">
                        <% startNextPageNum = currentSecNum[0].currentSecNum*5+1 %>
                        <% startPrevPageNum = ( currentSecNum[0].currentSecNum-2)*5+1 %>
                        <% if (currentSecNum[0].currentSecNum !== 1) { %>
                            <li class="page-item" style="display: inline-block;">
                                <a class="page-link" href="/search/query/<%= prevSecNum[0].prevSecNum %>/<%= startPrevPageNum %>/<%= searchParam[0].searchParam %>" aria-label="Previous" dataset=<%- prevSecNum[0].prevSecNum %>>
                                    <span aria-hidden="true">&#171;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                        <% } %>
                        <% for (var i=(currentPageTotalNum[0].currentPageTotalNum*currentSecNum[0].currentSecNum >= currentPageNum[0].currentPageNum) ? (currentSecNum[0].currentSecNum-1)*5+1 : currentPageNum[0].currentPageNum ; i <= currentPageTotalNum[0].currentPageTotalNum+5*(currentSecNum[0].currentSecNum-1); ++i) { %>
                            <li class="page-item paginated-number"  style="display: inline-block;"><a class="page-link" href="/search/query/<%= currentSecNum[0].currentSecNum %>/<%= i %>/<%= searchParam[0].searchParam %>"><%= i %></a></li>
                        <% } %>
                        <% if (currentSecNum[0].currentSecNum !== totalSecNum) { %> 
                            <li class="page-item" style="display: inline-block;">
                                <a class="page-link" href="/search/query/<%= nextSecNum[0].nextSecNum %>/<%= startNextPageNum %>/<%= searchParam[0].searchParam %>" aria-label="Next" dataset=<%- nextSecNum[0].nextSecNum %>>
                                    <span aria-hidden="true">&#187;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        <% } %>
                    </div>
                </ul>
                
            </nav>
            
        <% } %>

        
        
        
        <script>

            $('.ui.search')
                .search({
                    type: 'category',
                    apiSettings: {
                        onResponse: function(res) {
                            var
                                response = {
                                    results : {}
                                },
                                counter = 0,
                                max = 10;


                            $.each(res, function(index, item) {
                                
                                if (index >= max) {
                                    return false;
                                }

                                category = item.field_acronym;

                                if (response.results[category] === undefined) {
                                    maxResults = 2;
                                    response.results[category] = {
                                        name: category,
                                        results: []
                                    };
                                };


                                if (maxResults >= 0) {

                                    response.results[category].results.push({
                                        title: item.course_acronym,
                                        url: `/catalog/${item.field_acronym}/${item.course_acronym}`,
                                        description: item.professors
                                    });
                                };

                                maxResults -= 1;
                            });

                            return response;
                        },
                        url: "/searching/{query}"
                    }
                });
            
                <% if (currentPageNum[0].currentPageNum !== undefined) { %>
                    $('.paginated-number').each(function(index) {
                        if ("<%= currentPageNum[0].currentPageNum %>" === $(this).text()) {
                            $(this).addClass('active');
                        };
                    });
                <% } %>
                
                


            

            
        </script>

    </body>

</html>