		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>

        <!-- Typeahead JavaScript -->
        <script src="./public/typeahead.min.js" type="text/javascript"></script>

        <!-- Event Handlers -->
        <script>
            $('.search-keyword').on('input', function() {
                let keyword = $('.search-keyword').val();
                $.ajax({
                    url: `/searching`,
                    data: {keyword},
                    success: function(data) {
                        console.log(data);
                        if (!data) {
                            return $('div.list-group').html("");
                        };

                        if (data === "-1") {
                            return $('div.list-group').html(`<div class="category list-group-item">
                                                                <p>No Matching Results Found</p>
                                                             </div>`)
                        };

                        template = "";

                        for (var i=0; i < Object.keys(data).length; i++) {
                            template += `<div class="category list-group-item">
                                            <p>${Object.keys(data)[i]}</p>
                                        </div>`;
                            data[Object.keys(data)[i]].forEach((obj,index,arr) => {
                                template += `<a class="list-group-item action" href="/catalog/${obj.field_acronym}/${obj.course_acronym}">
                                                <p>${obj.course_acronym}</p>
                                                <p>${obj.section}</p>
                                                <p>${obj.professors}</p>
                                            </a>`;
                            });
                        };

                        $('div.list-group').html(template);
                    }
                })
            })
        </script>
