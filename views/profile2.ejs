				        				<!-- Single button -->
							            <div class="btn-group">
							              <button type="button" class="btn btn-default dropdown-toggle text-right" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							                <%= categoryDisplay %> <span class="caret"></span>
							              </button>
